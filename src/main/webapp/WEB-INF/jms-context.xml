    <jee:jndi-lookup id="connectionFactory" jndi-name="java:/JmsXA"/>

    <jee:jndi-lookup id="defaultDestination" jndi-name="java:/jms/queue/TestQueue"/>

    <bean id="producerTemplate" class="org.springframework.jms.core.JmsTemplate">
        <property name="connectionFactory" ref="connectionFactory"/>
        <property name="defaultDestination" ref="defaultDestination"/>
    </bean>

    <bean id="jmsProducer" class="sk.stuba.fei.nemocnica.jms.JmsProducer"/>

    <bean id="jmsListener" class="sk.stuba.fei.nemocnica.jms.JmsListener"/>

    <bean id="jmsContainer" class="org.springframework.jms.listener.DefaultMessageListenerContainer">
        <property name="connectionFactory" ref="connectionFactory"/>
        <property name="destination" ref="defaultDestination"/>
        <property name="messageListener" ref="jmsListener"/>
    </bean>

